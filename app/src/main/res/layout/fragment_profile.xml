<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/switchDarkLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="switch Dark/Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/cacheEditTextNumber"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="20"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/cacheImageButton"
        app:layout_constraintStart_toStartOf="@+id/switchDarkLight"
        app:layout_constraintTop_toBottomOf="@+id/switchDarkLight" />

    <ImageButton
        android:id="@+id/cacheImageButton"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="edit icon"
        android:contextClickable="false"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/cacheEditTextNumber"
        app:layout_constraintEnd_toEndOf="@+id/switchDarkLight"
        app:layout_constraintTop_toTopOf="@+id/cacheEditTextNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>